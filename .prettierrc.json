{
  "$schema": "http://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "bracketSpacing": false,
  "arrowParens": "always",
  "printWidth": 120,
  "trailingComma": "es5",
  "embeddedLanguageFormatting": "off",
  "overrides": [
    {
      "files": "**/*.html",
      "options": {
        "printWidth": 150
      }
    }
  ]
}
