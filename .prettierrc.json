{
  "$schema": "http://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "arrowParens": "always",
  "printWidth": 120,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "**/*.html",
      "options": {
        "printWidth": 150,
        "singleQuote": false
      }
    }
  ]
}
