{
  "name": "@magnal/prettier-config",
  "version": "4.0.0",
  "description": "Prettier config for my projects",
  "author": {
    "name": "Manuel Lang",
    "email": "hello@manuellang.dev",
    "url": "https://manuellang.dev/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MaGnaL/prettier-config.git"
  },
  "homepage": "https://github.com/MaGnaL/prettier-config",
  "main": ".prettierrc.json",
  "scripts": {
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^3.0.3",
    "standard-version": "^9.1.0"
  },
  "peerDependencies": {
    "prettier": "^3"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
